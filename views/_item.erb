<article class="media">
  <div class="media-content">
    <div class="content">
      <p>
        <strong><%= Rack::Utils.escape_html(item.author) %></strong> | <small><%= item.created_at.in_time_zone('Kaliningrad').strftime('%H:%M:%S %d-%m-%Y %Z') %></small>
        <br>
        <%= Rack::Utils.escape_html(item.text) %>
        <br>
        <small><i><%= Rack::Utils.escape_html(item.sysinfo) %></i></small>
      </p>
    </div>
  </div>
  <div class="media-right">
    <form action="/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this?');">
      <button class="has-background-danger delete" type="submit" name="id" value="<%= item.id %>" class="btn-link"></button>
    </form>
  </div>
</article>
